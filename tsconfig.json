{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "es2015",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "strict": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "paths": {
      "@src/*": ["./src/*"],
      "@hooks/*": ["./src/hooks/*"]
    },
    "declaration": true,
    "declarationDir": "",
    "emitDeclarationOnly": true,
    "typeRoots": ["./node_modules/@types/", "./typings/**/*"]
  },
  "importHelpers": true,
  "include": ["src/**/*.tsx", "**/*.ts", "typings/**/*.d.ts"],
  "exclude": ["node_modules", "test/**/*.ts", "build"]
}
